<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lvdou.mapper.FruitMapper">

    <!-- 多条件查询品牌 -->
    <select id="findAll" resultType="Fruit">
        SELECT * from tb_fruit
        <where>
            <if test="fruit != null">
                <!-- 品牌名称 -->
                <if test="fruit.fruitName != null and fruit.fruitName !=''">
                    name like CONCAT('%',#{fruit.fruitName},'%')
                </if>

            </if>
        </where>
        order by id asc
    </select>

    <!-- 批量删除 -->
    <delete id="deleteAll">
        delete FROM tb_fruit where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>